# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ayurtrace
MONGODB_URI_TEST=mongodb://localhost:27017/ayurtrace_test

# Application Configuration
NODE_ENV=development
PORT=5173

# Blockchain Configuration
BLOCKCHAIN_NETWORK=development
SMART_CONTRACT_VALIDATION=true

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services (for production)
IPFS_ENDPOINT=https://ipfs.infura.io:5001
SMS_GATEWAY_API_KEY=your_sms_gateway_key
EMAIL_SERVICE_API_KEY=your_email_service_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log